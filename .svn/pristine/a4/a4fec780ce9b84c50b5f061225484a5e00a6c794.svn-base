ion-content {
    div.harmony-wrapper{
        max-width: 720px;
        position: relative;
        margin: 0 auto;
        background-color: #f7f7f7;
        div.main-visual{
            min-height: 550px;
            background-image: url('/assets/images/main-visual.png');
            background-size: contain;
            background-repeat: no-repeat;
            padding: 60px;
            display: flex;
            align-items: center;
            position: inherit;
            div.info-wrap{
                width: 100%;
                article.date-user-info{
                    display: flex;
                    justify-content: space-between;
                    align-items: center;
                    p{
                        font-size: 16px;
                        font-weight: bold;
                        &.user{
                            background-color: #fff;
                            display: inline-block;
                            padding: 10px;
                            border-radius: 22.5px;
                            b{
                                margin-right: 5px;
                            }
                            span{
                                color: #555555;
                                font-size: 14px;
                            }
                        }
                    }
                }
                article.text-box{
                    margin-bottom: 50px;
                    p{
                        font-size: 20px;
                    }
                    h1{
                        font-size: 32px;
                        font-weight: bold;
                        word-break: break-all;
                    }
                }
            }
        }
        div.content{
            padding: 50px 30px;
            h4.sub-title{
                color: #333;
                font-weight: bold;
                font-size: 17px;
            }
            div.card{
                border: none;
                margin-top: 20px;
                border-radius: 20px;
                &.accordion{
                    border:none;
                    --bs-accordion-bg : #f7f7f7;
                    div.accordion-item{
                        border: none;
                        div.thum-box{
                            background-color: #f7f7f7;
                        }
                        div.accordion-collapse{
                            margin-top: 15px;
                            .accordion-body{
                                padding: 15px;
                                border-radius: 20px;
                                background-color: #fff;
                                
                                div.etc-btn{
                                    display:flex;
                                    justify-content: flex-end;
                                    button{
                                        background: none;
                                        font-size: 14px;
                                        color: #5e5e5e;
                                        border-radius: 15px;
                                        border: 1px solid rgba(223, 223, 223, 0.8745098039);
                                        padding: 5px 10px;
                                        &:hover{
                                            color: #146ebe;
                                        }
                                    }
                                }
                                pre.result-text{
                                    margin-bottom: 0;
                                    color: #555;
                                    font-size: 14px;
                                    white-space: break-spaces;
                                    font-family: "Poppins", "Noto Sans KR", sans-serif;
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
