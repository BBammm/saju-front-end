ion-content{width:100%;height:100vh;--ion-background-color: #f7f7f7}ion-content div.auth-wrapper{display:flex;flex-direction:column;height:100%;max-width:620px;margin:0 auto;padding:20px}ion-content div.auth-wrapper div.title-box{margin-bottom:25px}ion-content div.auth-wrapper div.title-box h1{font-weight:bold;font-size:30px}ion-content div.auth-wrapper article.mid fieldset{padding:0;border:none;display:flex;justify-content:space-between;align-items:center;margin-bottom:15px}ion-content div.auth-wrapper article.mid fieldset label{font-size:14px;color:#333;font-weight:500;min-width:85px}ion-content div.auth-wrapper article.mid fieldset input{display:inline-flex;width:100%;padding:15px;border-radius:15px;outline-color:#358ccb6b;outline-width:0.1em;box-sizing:content-box;border:1px solid #dfdfdf;font-size:16px;color:#666}ion-content div.auth-wrapper article.mid fieldset select{display:inline-flex;margin-right:10px;padding:15px 5px;border-radius:15px;outline-color:#358ccb6b;outline-width:0.1em;box-sizing:content-box;border:1px solid #dfdfdf;font-size:16px;width:100%;max-width:60px;color:#666}ion-content div.auth-wrapper article.mid fieldset button{display:inline-flex;width:100%;padding:15px;border-radius:15px;outline-color:#358ccb6b;outline-width:0.1em;box-sizing:content-box;border:1px solid #dfdfdf;background-color:#fff;justify-content:center;font-size:16px;transition:all 0.5s ease;color:#666}ion-content div.auth-wrapper article.mid fieldset button.male{margin-right:10px}ion-content div.auth-wrapper article.mid fieldset button:focus,ion-content div.auth-wrapper article.mid fieldset button.active{border-color:#358ccb6b;box-shadow:0px 0px 0px 3px rgba(0,144,237,0.4);font-weight:bold;color:#333}ion-content div.auth-wrapper button.submit-btn{width:100%;background-color:#333;color:#fff;padding:15px 0;font-size:18px}
