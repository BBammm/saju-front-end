ion-content {
    --ion-background-color: #f7f7f7;
    div.main-wrapper{
        max-width: 720px;
        position: relative;
        margin: 0 auto;
        // padding: 30px 20px
        div.main-visual{
            min-height: 550px;
            background-image: url('/assets/images/main-visual.png');
            background-size: contain;
            background-repeat: no-repeat;
            padding: 60px;
            display: flex;
            align-items: center;
            // border:1px solid tomato;
            position: inherit;
            div.info-wrap{
                width: 100%;
                article.date-user-info{
                    display: flex;
                    justify-content: space-between;
                    align-items: center;
                    p{
                        font-size: 16px;
                        font-weight: bold;
                        &.user{
                            background-color: #fff;
                            display: inline-block;
                            padding: 10px;
                            border-radius: 22.5px;
                            b{
                                margin-right: 5px;
                            }
                            span{
                                color: #555555;
                                font-size: 14px;
                            }
                        }
                    }
                }
                article.text-box{
                    max-width: 50%;
                    margin-bottom: 50px;
                    p{
                        font-size: 20px;
                    }
                    h1{
                        font-size: 32px;
                        font-weight: bold;
                        word-break: break-all;
                    }
                }
                a.btn-style{
                    display: inline-block;
                    background-color: #fff;
                    padding: 10px 20px;
                    min-width: 100px;
                    text-align: center;
                    color: #333;
                    font-size: 14px;
                    font-weight: bold;
                    border-radius: 30px;
                    text-decoration: none;
                    img{
                        margin-left: 15px;
                        width: 5px;
                    }
                }
            }
            div.animal-12{
                position: absolute;
                right: 0;
                bottom: 0;
                img{
                    max-width: 230px;
                }
            }
        }
    }
}
