ion-content {
    div.main-wrapper{
        max-width: 720px;
        position: relative;
        margin: 0 auto;
        background-color: #f7f7f7;
        div.main-visual{
            min-height: 550px;
            background-image: url('/assets/images/main-visual.png');
            background-size: contain;
            background-repeat: no-repeat;
            padding: 60px;
            display: flex;
            align-items: center;
            position: inherit;
            div.info-wrap{
                width: 100%;
                article.date-user-info{
                    display: flex;
                    justify-content: space-between;
                    align-items: center;
                    p{
                        font-size: 16px;
                        font-weight: bold;
                        &.user{
                            background-color: #fff;
                            display: inline-block;
                            padding: 10px;
                            border-radius: 22.5px;
                            b{
                                margin-right: 5px;
                            }
                            span{
                                color: #555555;
                                font-size: 14px;
                            }
                        }
                    }
                }
                article.text-box{
                    max-width: 50%;
                    margin-bottom: 50px;
                    p{
                        font-size: 20px;
                    }
                    h1{
                        font-size: 32px;
                        font-weight: bold;
                        word-break: break-all;
                    }
                }
                a.btn-style{
                    display: inline-block;
                    background-color: #fff;
                    padding: 10px 20px;
                    min-width: 100px;
                    text-align: center;
                    color: #333;
                    font-size: 14px;
                    font-weight: bold;
                    border-radius: 30px;
                    text-decoration: none;
                    img{
                        margin-left: 15px;
                        width: 5px;
                    }
                }
            }
            div.animal-12{
                position: absolute;
                right: 0;
                bottom: 0;
                img{
                    max-width: 230px;
                }
            }
        }
        div.content{
            padding: 50px 30px;
            h4.sub-title{
                color: #333;
                font-weight: bold;
                font-size: 17px;
            }
            div.card{
                padding: 15px;
                border: none;
                margin-top: 20px;
                border-radius: 20px;
                span.badge{
                    background-color: #015b8d;
                    width: fit-content;
                    padding: 10px;
                    font-weight: normal;
                    border-radius: 15px;
                }
                h3.card-title{
                    margin: 20px 0;
                    font-weight: bold;
                    max-width: 80%;
                    word-break: keep-all;
                    font-size: 27px;
                }
                p.explanation{
                    color: #222;
                    margin-bottom: 0;
                    font-size: 14px;
                    overflow: hidden;
                    white-space: nowrap;
                    text-overflow: ellipsis;
                    flex: 1;
                }
                div.etc-btn{
                    display:flex;
                    justify-content: flex-end;
                    margin-top: 10px;
                    button{
                        background: none;
                        font-size: 14px;
                        color: #183153;
                        border-radius: 15px;
                        border: 1px solid rgba(223, 223, 223, 0.8745098039);
                        padding: 5px 10px;
                        &:hover{
                            color: #146ebe;
                        }
                    }
                }
                &.accordion{
                    border:none;
                    div.accordion-item{
                        border: none;
                        .accordion-header{
                            button{
                                padding: 15px 0;
                                background: none;
                                font-size: 17px;
                                color: #222;
                                font-weight: bold;
                            }
                        }
                        .accordion-body{
                            padding: 15px 0;
                            ul{
                                list-style: none;
                                padding: 0;
                                display: flex;
                                flex-wrap: wrap;
                                justify-content: space-between;
                                margin-bottom: 0;
                                li{
                                    width: auto;
                                    text-align: center;
                                    margin: 5px;
                                    a{
                                        text-decoration: none;
                                        display: inline-block;
                                        min-width: 75px;
                                        padding: 5px 10px;
                                        height: 100%;
                                        color: #a3a3a3;
                                        border-radius: 15px;
                                        border:1px solid #dfdfdfdf;
                                        font-size: 14px;
                                        cursor: pointer;
                                        &.on,&:hover{
                                            color: #222;
                                            border:1px solid #C2E0FF;
                                            box-shadow: 0px 0px 0px 3px rgba(0, 144, 237, 40%);
                                            transition: all 0.5s ease;
                                        }
                                        i{
                                            font-style: normal;
                                            font-size: 15px;
                                        }
                                    }
                                }
                            }
                            pre.result-text{
                                margin-bottom: 0;
                                color: #555;
                                font-size: 14px;
                                white-space: break-spaces;
                                font-family: "Poppins", "Noto Sans KR", sans-serif;
                            }
                        }
                    }
                }
                &.tumb-card{
                    padding: 0;
                }
            }
        }
    }
}
