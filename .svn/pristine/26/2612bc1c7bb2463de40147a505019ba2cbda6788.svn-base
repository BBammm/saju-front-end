ion-content{width:100%;height:100vh;--ion-background-color: #f7f7f7}ion-content div.auth-wrapper{display:flex;flex-direction:column;height:100%;max-width:620px;margin:0 auto;padding:20px}ion-content div.auth-wrapper div.title-box{margin-bottom:25px}ion-content div.auth-wrapper div.title-box h1{font-weight:bold;font-size:30px}ion-content div.auth-wrapper article.mid ul{padding-left:0}ion-content div.auth-wrapper article.mid ul li{list-style:none}ion-content div.auth-wrapper article.mid ul li a{text-decoration:none;font-weight:600;display:inline-block;padding:16px 24px;width:100%;border-radius:15px;margin-bottom:15px;color:#fff;font-size:16px;box-shadow:#000 0px 6px 17px 0px;position:relative;overflow:hidden}ion-content div.auth-wrapper article.mid ul li a.naver{background-color:#1ec800}ion-content div.auth-wrapper article.mid ul li a.naver i{background-image:url("/assets/images/naver-icon.svg")}ion-content div.auth-wrapper article.mid ul li a.kakao{color:#3c1e1e;background-color:#ffe812}ion-content div.auth-wrapper article.mid ul li a.kakao i{background-image:url("/assets/images/kakao-icon.svg")}ion-content div.auth-wrapper article.mid ul li a.google{background-color:#fff;color:#000}ion-content div.auth-wrapper article.mid ul li a.google i{background-image:url("/assets/images/google-icon.svg")}ion-content div.auth-wrapper article.mid ul li a:after{content:'';position:absolute;left:0;width:100%;height:100%;background-color:#a7a2a2;display:none;top:0}ion-content div.auth-wrapper article.mid ul li a:hover:after{display:block}ion-content div.auth-wrapper article.mid ul li a i{width:22px;height:22px;margin-right:20px;display:inline-block;vertical-align:text-bottom}
